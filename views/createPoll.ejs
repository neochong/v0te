<% include head.ejs %>

<body>

  <% include nav.ejs %>
  <div class="container" style="margin-top:5vh">
    <form id="newpoll" method="POST" action="/submit">

      <h3>Create Poll with at least 2 options</h3>
      <hr>
      <div class="form-group">
        <label for="Question">Question</label>
        <input type="text" class="form-control" required name="Question" placeholder="What do you want to ask?" />
      </div>
      <div class="form-group">
        <label for="Option1" class="option">Option #1</label>
        <input type="text" class="form-control option" required name="Option1" placeholder="Hmm...this option sounds good" />
        <label for="Option2" class="option">Option #2</label>
        <input type="text" class="form-control option" required name="Option2" placeholder="This is not bad either.." />
      </div>

      <span class="btn btn-primary" id="add">+</span>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </div>

</body>
</html>
